[core]
  attributesFile = ~/.config/git/attributes
  excludesFile = ~/.config/git/ignore
  ignoreCase = false
  symlinks = true
  fsmonitor = true
  untrackedCache = true

[commit]
  template = ~/.config/git/message
  verbose = true

[init]
  defaultBranch = main

[fetch]
  all = true
  parallel = 0
  prune = true
  pruneTags = true

[submodule]
  fetchJobs = 0
  recurse = true

[pull]
  ff = only
  rebase = true

[merge]
  autoStash = true
  ff = only
  conflictStyle = zdiff3

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true

[rerere] # in case `clear` does not work, delete .git/rr-cache
  enabled = true
  autoupdate = true

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[status]
  submoduleSummary = true

[column]
  ui = auto

[branch]
  autoSetupMerge = always
  autoSetupRebase = always
  sort = -committerdate

[tag]
  sort = version:refname

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[help]
  autocorrect = prompt

[alias]
  ls-ignored = ls-files -o -i --exclude-standard
  word-diff = diff -w --word-diff=color

[include]
  path = ~/.gitconfig.local
