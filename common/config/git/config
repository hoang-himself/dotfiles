[core]
  attributesFile = ~/.config/git/attributes
  excludesFile = ~/.config/git/ignore
  ignoreCase = false
  symlinks = true
  fsmonitor = true
  untrackedCache = true

[commit]
  template = ~/.config/git/message
  verbose = true

[init]
  defaultBranch = main

[fetch]
  all = true
  parallel = 0
  prune = true
  pruneTags = true

[submodule]
  fetchJobs = 0
  recurse = true

[pull]
  ff = only
  rebase = true

[merge]
  autoStash = true
  ff = only
  conflictStyle = zdiff3

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true

[rerere] # in case `clear` does not work, delete .git/rr-cache
  enabled = true
  autoupdate = true

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[status]
  submoduleSummary = true

[column]
  ui = auto

[branch]
  autoSetupMerge = always
  autoSetupRebase = always
  sort = -committerdate

[tag]
  sort = version:refname

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[help]
  autocorrect = prompt

[alias]
  cfg = config --list
  root = rev-parse --show-toplevel
  ignored = ls-files --others --ignored --exclude-standard
  remotes = remote --verbose
  tags = tag
  stashes = stash list

  cl = clone --recurse-submodules
  fa = fetch --all --prune
  up = pull --rebase --autostash
  submodup = submodule update --init --recursive

  wta = worktree add
  wtls = worktree list
  wtmv = worktree move
  wtrm = worktree remove

  bss = bisect start
  bsg = bisect good
  bsb = bisect bad
  bsr = bisect reset

  rb = rebase
  rbi = rebase --interactive
  rbc = rebase --continue
  rba = rebase --abort
  rbo = rebase --onto
  rbs = rebase --skip

  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort

  a = add
  af = add --force
  apa = add --patch
  rmc = rm --cached

  cam = commit --all --message
  cmsg = commit --message
  can = commit --all --no-edit --amend
  cn = commit --no-edit --amend

  rh = reset
  rhh = reset --hard
  roh = !git reset --hard \"origin/$(git branch --show-current)\"
  pristine = !git reset --hard && git clean -dfx

  p = push
  pd = push --delete
  pf = push --force-with-lease --force-if-includes
  pfa = pf --all
  psup = !git push --set-upstream origin $(git branch --show-current)
  psupf = psup --force-with-lease --force-if-includes

  sw = switch
  swc = switch --create

  branches = branch --all
  bf = branch --force
  bd = branch --delete
  bsup = !git branch --set-upstream-to=\"origin/$(git branch --show-current)\"
  cosubmod = checkout --recurse-submodules

  st = status
  ss = status --short
  sps = show --pretty=short --show-signature
  word-diff = diff --ignore-all-space --word-diff=color

  log-fmt-abs = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
  log-fmt-rel = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
  lod = log-fmt-abs
  lods = log-fmt-abs --date=short
  lol = log-fmt-rel
  lola = log-fmt-rel --all
  lols = log-fmt-rel --stat
  loga = log --oneline --decorate --graph --all

[include]
  path = ~/.gitconfig.local
