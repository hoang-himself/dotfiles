#
# Aliases.
#

# Python venv
alias vx='deactivate'
function va {
  local venv_path
  # [[ -n "$*" ]] && venv_path="${*: -1:1}" || venv_path=".venv"
  [[ -n "$*" ]] && venv_path="$1" || venv_path=".venv"

  if [[ ! -d "$venv_path" && ! -L "$venv_path" ]]; then
    python -m venv --upgrade-deps "$venv_path"
    touch requirements.txt
    . ./"$venv_path"/bin/activate
    pip install wheel
  else
    . ./"$venv_path"/bin/activate
  fi
}

# Git worktree
alias gwt='git worktree'
alias gwta='git worktree add'
alias gwtls='git worktree list'
alias gwtlo='git worktree lock'
alias gwtmv='git worktree move'
alias gwtpr='git worktree prune'
alias gwtrm='git worktree remove'
alias gwtulo='git worktree unlock'

# Make aliases work with sudo
alias sudo='sudo '

# Other
alias ls='ls --color=auto --group-directories-first -v'
alias rr='rm -rf'
alias now='date +"%T"'
alias week='date +%V'
