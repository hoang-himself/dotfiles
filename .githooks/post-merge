#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
squash_flag="$1"

echo 'Running post-merge hook.'

for script in "$SCRIPT_DIR/post-merge.d"/*.sh; do
  if [ -f "$script" ] && [ -x "$script" ]; then
    "$script" "$squash_flag"
  fi
done

echo 'Post-merge hook completed.'
exit 0
