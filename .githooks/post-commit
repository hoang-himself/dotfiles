#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo 'Running post-commit hook.'

for script in "$SCRIPT_DIR/post-commit.d"/*.sh; do
  if [ -f "$script" ] && [ -x "$script" ]; then
    "$script"
  fi
done

echo 'Post-commit hook completed.'
exit 0
